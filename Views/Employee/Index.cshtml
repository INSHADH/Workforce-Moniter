@model IEnumerable<Workforce_Monitor.Models.TNEmpMasterTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered" id="dataTable">
    <thead class="thead-dark">
        <tr>
            <th>Employee ID</th>
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Designation</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.emp_id</td>
                <td>@item.emp_code</td>
                <td>@item.emp_name</td>
                <td>@item.designation</td>
                <td>@item.salary</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.emp_id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.emp_id }, new { @class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.emp_id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "pageLength": 10,
                "ordering": true
            });
        });
    </script>
}
